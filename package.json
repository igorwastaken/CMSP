{
  "name": "cmsp",
  "version": "1.0.2",
  "description": "Centro de Mídias de São Paulo",
  "main": "index.js",
  "scripts": {
    "build": "electron-builder -p onTag --win portable",
    "start": "electron .",
    "publish": "electron-builder -p onTag --win portable",
    "fix": "prettier . --write",
    "lint": "prettier . --check"
  },
  "build": {
    "appId": "com.alzira.cmsp",
    "productName": "CMSP",
    "win": {
      "publisherName": "Escola Alzira",
      "publish": [
        "github"
      ],
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "notigorwastaken",
        "repo": "CMSP"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/notigorwastaken/CMSP.git#main"
  },
  "author": "Igor Figueiredo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/notigorwastaken/CMSP/issues"
  },
  "homepage": "https://github.com/notigorwastaken/CMSP#readme",
  "devDependencies": {
    "electron": "^32.1.2",
    "electron-builder": "^25.0.5",
    "prettier": "3.3.3"
  },
  "dependencies": {
    "electron-log": "^5.2.0",
    "electron-updater": "^6.3.4"
  }
}
